<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_green</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_primary</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="SecondaryButton" parent="PrimaryButton">
        <item name="android:background">@drawable/button_outline_gray</item>
        <item name="android:textColor">@color/primary_green</item>
    </style>

    <!-- Text Styles -->
    <style name="HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SubHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Price Text Styles -->
    <style name="PriceText">
        <item name="android:textColor">@color/accent_orange</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OriginalPriceText">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Input Field Styles -->
    <style name="InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/rounded_corner_light_bg</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Card Styles -->
    <style name="ProductCard">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="InfoCard" parent="ProductCard">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/gradient_primary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Bottom Navigation Styles -->
    <style name="BottomNavigationStyle">
        <item name="android:background">@android:color/white</item>
        <item name="elevation">8dp</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
    </style>

    <!-- Dialog Styles -->
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/rounded_corner_12dp</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primary_green</item>
        <item name="android:progressBackgroundTint">@color/background_light</item>
    </style>

    <!-- Status Badge Styles -->
    <style name="StatusBadge">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">4dp</item>
    </style>

    <!-- Rounded Image Style (item order detail)-->
    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="NoIndicatorStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>
</resources>